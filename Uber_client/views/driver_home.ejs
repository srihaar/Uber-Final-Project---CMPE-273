<!DOCTYPE html>
<html ng-app="uberModule">
  <head>
     <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
     <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js">
     <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
     <link rel='stylesheet' href='/stylesheets/uberhome.css' />
     <style type="text/css">
       .btn-file {
           position: relative;
           overflow: hidden;
       }
       .btn-file input[type=file] {
           position: absolute;
           top: 0;
           right: 0;
           min-width: 100%;
           min-height: 100%;
           font-size: 100px;
           text-align: right;
           filter: alpha(opacity=0);
           opacity: 0;
           outline: none;
           background: white;
           cursor: inherit;
           display: block;
        }
    </style>
  </head>
  <body ng-controller="DriverController"> 
  <div>
  <div class="row">
  <div class="page-header col-sm-12"> 
  <div class="logo-div"><img class="uberlogo img-responsive" src="/images/uberlogo.png">
  </div>
    </div>
  </div>  
  <div class="container>
    <div class="page-body row">
    <div class="col-sm-2 left-div">
    <div class="row">
         <img class="profile" ng-src="{{picUrl}}">        
       </div>
       <div class="row">          
       <p><h4>{{user.FirstName}}&nbsp;{{user.LastName}}</h4></p>
      <form action="/uploadPic" method="post" enctype="multipart/form-data">                   
          <span class="btn btn-sm btn-default btn-file"><span class="glyphicon glyphicon-edit"></span>&nbsp;Edit Pic <input type="file" name="file"></span>
          <button type="submit" class="btn btn-sm btn-default" ng-click="displayPic()"><span class="glyphicon glyphicon-upload"></span></button>
          <br/><span class="hint">Supported files: jpg</span>
      </form> 
       <br>
  	 </div>
   <div class="row">
    <ul class="nav nav-pills nav-stacked">
    <li class="active"><a ui-sref="Requests">Ride Requests</a></li>
    <li><a ui-sref="Rides">My Rides</a></li>
    <li><a ui-sref="Profile">Profile</a></li>
    <li><a href="/logout">Log Out</a></li>
    </ul>
        </div>
    </div>
    <div class="col-sm-10">

                          <div ui-view = "rideRequests"></div>
                          <div ui-view = "viewRides"></div>
                          <div ui-view = "viewProfile"></div>
                     </div>
    </div>
    </div>
    <div class="row">
    <div class="page-footer col-sm-12">
    	<img class="footer img-responsive" src="/images/uber-footer.png">
    </div>
    </div>
  </div> 
  <script src= "/controller/angular-route.js"></script>
  <script src = "/controller/angular-ui-router.min.js"></script>   
  <script src="/controller/DriverController.js"></script> 
  </body>
</html>